<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <context-param>
        <description>nome per il parametro da inserire all'interno degli attributi</description>
        <param-name>servlet.configs</param-name>
        <param-value>it.unive.taw.sun.lingyong.socialhub.service.servlets</param-value>
    </context-param>
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>it.unive.taw.sun.lingyong.socialhub.models.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AndyLogin</servlet-name>
        <servlet-class>it.unive.taw.sun.lingyong.socialhub.service.servlets.AndyLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>PostsHub</servlet-name>
        <servlet-class>it.unive.taw.sun.lingyong.socialhub.service.servlets.PostsHub</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>History</servlet-name>
        <servlet-class>it.unive.taw.sun.lingyong.socialhub.service.servlets.History</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AndyLoginHandler</servlet-name>
        <servlet-class>it.unive.taw.sun.lingyong.socialhub.service.servlets.AndyLoginHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WebLoginHandler</servlet-name>
        <servlet-class>it.unive.taw.sun.lingyong.socialhub.service.servlets.WebLoginHandler</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>WebLogin</servlet-name>
        <servlet-class>it.unive.taw.sun.lingyong.socialhub.service.servlets.WebLogin</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AndyLoginUserInit</servlet-name>
        <servlet-class>it.unive.taw.sun.lingyong.socialhub.service.servlets.AndyLoginUserInit</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UtenteServlet</servlet-name>
        <servlet-class>it.unive.taw.sun.lingyong.socialhub.service.servlets.UtenteServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Loguout</servlet-name>
        <servlet-class>it.unive.taw.sun.lingyong.socialhub.service.servlets.Loguout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Services</servlet-name>
        <servlet-class>it.unive.taw.sun.lingyong.socialhub.service.servlets.Services</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/ns</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AndyLogin</servlet-name>
        <url-pattern>/login/app</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>PostsHub</servlet-name>
        <url-pattern>/posts</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>History</servlet-name>
        <url-pattern>/history</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AndyLoginHandler</servlet-name>
        <url-pattern>/login/app/reception</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WebLoginHandler</servlet-name>
        <url-pattern>/login/web/reception</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>WebLogin</servlet-name>
        <url-pattern>/login/web</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AndyLoginUserInit</servlet-name>
        <url-pattern>/utente/app/init</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UtenteServlet</servlet-name>
        <url-pattern>/utente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Loguout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Services</servlet-name>
        <url-pattern>/services</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
